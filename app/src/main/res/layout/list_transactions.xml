<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_14sdp"
            android:background="@drawable/card_stroke"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terkonfirmasi"
                android:id="@+id/tvStatus"
                android:layout_gravity="end"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popreg"
                android:textColor="@color/main"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvImage"
                    android:layout_width="@dimen/_60sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    android:layout_height="@dimen/_60sdp">
                    <ImageView
                        android:id="@+id/ivField"
                        android:src="@color/main"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cvImage"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvFieldName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popmed"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:text="Tri lomba juang"/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popreg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:text="2023-02-02  19:02:02"/>
                </LinearLayout>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popreg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:text="Total Pembayaran: "/>
                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popreg"
                    android:textColor="@color/main"
                    android:textSize="@dimen/_12ssp"
                    android:text="RP. 20000.000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lrReview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toLeftOf="@id/btnReview"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/popreg"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Berikan review dan penilaian tentang kepuasan lapangan."/>

                    <com.google.android.material.button.MaterialButton

                        android:id="@+id/btnReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Review"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</RelativeLayout>