<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/main"
                    android:layout_height="@dimen/_50sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/popmed"
                        android:text="Filter pencarian"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinnerLocation"
                        android:layout_width="match_parent"
                        style="@style/filterDropDown"
                        android:layout_height="wrap_content"
                        app:smsp_searchHeaderBackgroundColor="@color/main"
                        app:smsp_searchHint="Cari lokasi"
                        app:smsp_searchHeaderTextColor="@color/white"
                        app:smsp_floatingLabelColor="@color/main"
                        app:smsp_floatingLabelText="Lokasi Pencarian"
                        app:smsp_hint="Pilih lokasi"
                        app:smsp_enableSearchHeader="true"
                        app:smsp_hintColor="@color/black"
                        app:smsp_searchHeaderText="Cari lokasi"
                        app:smsp_isSearchable="true"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_itemColor="@color/black"
                        app:smsp_itemSize="@dimen/_11ssp"
                        android:textSize="@dimen/_11ssp"
                        app:smsp_itemListColor="@color/black"
                        app:smsp_itemListHintBackgroundColor="#808080"
                        app:smsp_itemListHintColor="#FFFFFF"
                        app:smsp_selectedItemListColor="@color/main" />

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        style="@style/filterDropDown"
                        android:layout_height="wrap_content"
                        app:smsp_searchHeaderBackgroundColor="@color/main"
                        app:smsp_searchHint="Cari lokasi"
                        app:smsp_searchHeaderTextColor="@color/white"
                        app:smsp_floatingLabelColor="@color/main"
                        app:smsp_floatingLabelText="Kategori Olahraga"
                        app:smsp_hint="Pilih olahraga"
                        app:smsp_enableSearchHeader="true"
                        app:smsp_hintColor="@color/black"
                        app:smsp_itemSize="@dimen/_11ssp"
                        app:smsp_searchHeaderText="Cari lokasi"
                        app:smsp_isSearchable="true"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_itemColor="@color/black"
                        app:smsp_itemListColor="@color/black"
                        app:smsp_itemListHintBackgroundColor="#808080"
                        app:smsp_itemListHintColor="#FFFFFF"
                        app:smsp_selectedItemListColor="@color/main" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:text="Filter"
                        android:id="@+id/btnFilter"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>
